div(ng-if="article")
    div.row
        div.col-md-6
            h3(ng-repeat="title in article.titles | filter:{kind:'english'} | limitTo:1" ng-bind="title.value")
        div.col-md-6
            h3(ng-repeat="title in article.titles | filter:{kind:'japan'} | limitTo:1" ng-bind="title.value")
    div.row
        div.col-md-3
            span(ng-repeat="info in article.infos | filter:{kind:'pub_eng'} | limitTo:1" ng-bind="info.value")
        div.col-md-3
            span(ng-repeat="info in article.infos | filter:{kind:'pub_jap'} | limitTo:1" ng-bind="info.value")
        div.col-md-3
            span(ng-repeat="info in article.infos | filter:{kind:'release'} | limitTo:1" ng-bind="info.value")
        div.col-md-3
            span(ng-repeat="info in article.infos | filter:{kind:'media'} | limitTo:1" ng-bind="info.value")